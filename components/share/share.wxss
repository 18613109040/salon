.hid_box {
  width: 100%;
  height: 100%;
  justify-content: space-between;
  background-color: rgba(15, 15, 26, 0.7);
  position: fixed;
  z-index: 999;
}

.btn_box {
  display: flex;
  align-items: center;
  width: 100%;
}

.btn_btm {
  position: fixed;
  bottom: 0;
  left: 0;
  color: #fff;
  width: 100%;
}

.son_box {
  height: 270rpx;
  width: 50%;
  background: #f0f0f0;
}

.btn_txt {
  color: #4a4a4a;
  font-size: 28rpx;
}

.btn_img {
  width: 160rpx;
  height: 160rpx;
  background-color: pink;
  margin-top: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.son_box {
  display: flex;
