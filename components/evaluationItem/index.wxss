.iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}
.icon-arrow-down::after{
  content: '\e692';
  font-size: 30rpx;
  color: #9B9B9B;
}
/*内容头部  */
.content{
  background: #fff;
  font-size: 28rpx;
  border-bottom: 2rpx solid #ccc;
  padding: 26rpx;
}
.content_top{
   display: flex;
   align-items: center;
}
cont_header{
  width: 80rpx;
  height: 80rpx;
}
.header_img{
  width: 70rpx;
  height: 70rpx;
}
.right-cotent{
  flex: 1;
  padding-left: 15rpx;
}
.rate-name{
  flex: 1;
  display: flex;
  align-items: center;
}
.rate-name .name{
  margin-right: 10rpx;
  color: #4A4A4A;
}
.cont_title{
  display: flex;
  align-items: center;
  width: 100%;
}
.start{
  padding: 12rpx 0 0 10rpx;
}
.money{
  font-size: 24rpx;
  color: #877FD4;

}
.date{
 flex-basis: 200rpx;
 font-size: 28rpx;
 color: #ccc;
 text-align: end;
}
/*文字评论  */
.comment_word{
  color: #4A4A4A;
  font-size: 24rpx;
text-overflow: -o-ellipsis-lastline;  
overflow: hidden;  
text-overflow: ellipsis;  
display: -webkit-box;  
-webkit-line-clamp: 2;  
-webkit-box-orient: vertical;  
}
/*换行展开  */
.com_change{
   color: #4A4A4A;
  font-size: 24rpx;
  text-overflow: -o-ellipsis-lastline;  
overflow: hidden;  
text-overflow: ellipsis;  
display: -webkit-box;  
-webkit-line-clamp: none;  
-webkit-box-orient: vertical; 
}
/*展开  */
.cont_open{
 text-align: center;
 display: block;
}
.cont_close{
  display: none;
}
.open_next{
  width: 32rpx;
  height: 16rpx;
}
.open_word{
  font-size: 20rpx;
  color: #9B9B9B;

}
/*评论图片  */
.comment_img{

  margin-left: -20rpx;
}
.com_img{
  width: 152rpx;
  height: 152rpx;
}

/*商家解释  */
.merchant{
  color: #b48a61;
  padding: 20rpx 0;
}