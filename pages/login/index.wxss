/* index.wxss */
.register-form {
  margin-top: 20px;
  font-size: 16px;
}

.register-form .ipt {
  padding: 10px 0 10px 5px;
}

.register-add-item {
  background-color: #fff;
  height: 92rpx;
  display: flex;
  align-items: center;
}

.register-add-item+.register-add-item {
  border-top: 1px solid #ddd;
}

.ored {
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

.register-add-item .btn-reg {
  background-color: #fff;
  color: #ff7920;
}

.register-add-item .r-icon {
  width: 30px;
  margin: 0 10px;
}

.register-add-save {
  margin: 10px 10px 10px;
}

.register-add-save .btn-default {
  padding: 10px;
  border-radius: 4px;
  text-align: center;
  color: white;
}

.register-add-save .btn-reg {
  background-color: #fff;
  color: #ff7920;
}

.code-btn {
  height: 15px;
  margin: 5px;
  background-color: #fff;
}

.register-form .btn {
  margin-right: 10px;
  font-size: 12px;
  display: inline-block;
  height: 30px;
  line-height: 30px;
  background: #fff;
}

.register-form .tip {
  color: #999999;
  font-size: 12px;
  padding: 0 40rpx;
}

.xieyi {
  position: fixed;
  bottom: 20rpx;
  left: 0;
  font-size: 12px;
  text-align: center;
  padding: 30rpx 0;
  width: 100%;
}

.xieyi .t1 {
  color: #999999;
}

.xieyi .t2 {
  color: #ff7920;
  display: inline-block;
}