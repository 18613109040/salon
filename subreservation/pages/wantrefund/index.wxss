  display: flex;
  height: 44px;
  align-items: center; /*垂直居中*/
  border-bottom: 1px solid #eee;
}

.be_top .be_top_bottom {
  flex: 1;
}

.be_top .be_top_ico {
  width: 25px;
  height: 15px;
}

.be_top .be_top_left {
  font-size: 16px;
  flex: 3;
}

.be_top .be_top_content {
  flex: 5;
  font-size: 16px;
  color: #838383;
}

.be_bottom {
  padding: 20rpx;
  display: flex;
}

.be_bottom_left .uploadImgBox image:nth-child(1) {
  margin-left: 0;
}

.be_bottom .be_bottom_left  #image {
  margin-left: 30rpx;
}

.be_bottom .be_bottom_right {
  padding-left: 20rpx;
  padding-top: 10rpx;
}

.be_bottom .be_bottom_right .be_bottom_right_top {
  display: block;
  font-size: 16px;
}

.be_bottom .be_bottom_right .be_bottom_right_bot {
  font-size: 12px;
  color: #999;
}

.be_bottom_left {
  display: flex;
  position: relative;
}

.be_bottom_left #be_images {
  width: 20px;
  height: 20px;
  position: absolute;
  top: -14rpx;
  left: 100rpx;
}

.ico-images .ico_img {
  width: 18px;
  height: 18px;
  position: absolute;
  top: 0;
  left: 40px;
}

