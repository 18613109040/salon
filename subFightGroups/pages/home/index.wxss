.iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}
.icon-horizontal::after{
  content: '\e602';
  font-size: 30rpx;
}
.icon-wendan::after {
  content: "\e67c";
  color: #877FD4;
  font-size: 40rpx;
}

