}
.swiper {
  height: 600rpx;
}

.swiper-item {
  width: 100%;
  height: 600rpx;
}

.slide-image {
  width: 100%;
  height: 600rpx;
}

.pack-name {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #4a90e2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.pack-des{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #4a4a4a;
  padding: 10rpx 20rpx 0rpx 0rpx;
}
.goods-info{
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx 20rpx 0rpx;
}
.goods-info .sku{
  font-size: 26rpx;
  color: #9b9b9b;
  flex: 1;
}
.goods-info .price{
  flex-basis: 200rpx;
  text-align: end;
}
.goods-info .price .packagePrice{
  color: #000;
  font-size: 36rpx;
  text-decoration: line-through;
}
.goods-info .price .groupPrice{
  color: #fd6b92;
  font-size: 54rpx;
}
.list{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  padding: 25rpx 0rpx 25rpx 0rpx;
}
.list-line{
  flex: 1;
  color:#9b9b9b;
}
.list-arrow{
  flex-basis: 200rpx;
  text-align: end;
  color:  #F5A623;
}
.list-arrow .arrow{
  vertical-align: middle;
}
.group-active{
  padding: 20rpx 0rpx 20rpx 0rpx;
}
.nunber-color{
  color: #4A90E2;
}
.buyer{
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx 20rpx 0rpx;
}
.buyer .buyer-left{
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.buyer .buyer-left .buyer-image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}
.buyer .time{
 flex-basis: 200rpx;
 text-align: end;
 color: #4a4a4a;
 font-size: 28rpx;
}
.buyer .buyer-name{
  margin-left: 20rpx ;
  margin-right: 20rpx;
}
.evalue-content{
  font-size: 24rpx;
  color: #4a4a4a;
  padding-bottom: 50rpx;
}
.evalue{
  margin-top: 30rpx;
  background: #fff;
  padding: 0rpx 20rpx 0rpx 20rpx;
}
.detail{
  background: #fff;
  margin-top: 30rpx;
  padding: 30rpx 20rpx 30rpx 20rpx;
  
}
.detail .title{
  font-size:26rpx;
  display: flex;
  align-items: center;
  color: #877FD4;
}
.detail image{
  width: 100%;
   margin-bottom: -9rpx;
  vertical-align: top;
}
.detail  .text{
  font-size: 26rpx;
  color: #4a4a4a;
}