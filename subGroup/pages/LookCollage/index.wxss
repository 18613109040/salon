/* subGroup/pages/LookCollage/index.wxss */

.LookCollage{
  background: #ffffff;
}
.LookCollage-top{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}
.LookCollage-top .top_left{
  width: 30%;
  height: 100rpx;
  background: #DDDDDD;
  font-family: PingFangHK-Regular;
  font-size: 32rpx;
  color: #5F57B4;
  letter-spacing: 0;
  line-height: 100rpx;
  text-align: center;
}
.top_time{
  color: rgb(126, 174, 231);
}
.LookCollage-top .top_right{
  width: 70%;
  height: 100rpx;
  background: #F3F3F3;
  font-family: PingFangHK-Regular;
  font-size: 28rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  line-height: 100rpx;
  text-align: center;
}
.LookCollage-title{
  width: 100%;
  height: 170rpx;
  display: flex;
  justify-content: space-around;
  padding: 36rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #EAEAEA;
}
.title_left{
  font-family: PingFangHK-Regular;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 50rpx;
}
.title_left .distances{
  font-size: 28rpx;
  color: rgb(126, 174, 231)
}
.title_left .address{
  font-size: 28rpx;
  color: rgb(99, 99, 99);
}
.title_right{
  width: 120rpx;
}
.title_img{
  display: block;
  width: 54rpx;
  height: 54rpx;
  margin: 0 auto;
}
.title_right .Navigate {
  font-size: 22rpx;
  color: #5F57B4;
  letter-spacing: 0;
  text-align: center;
}
.product{
  width: 100%;
  height: 162rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #EAEAEA;
  padding: 0 28rpx;
  box-sizing: border-box;
}
.product_center{
  width: 50%;
  display: flex;
  justify-content: space-between;
  font-family: PingFangHK-Regular;
  font-size: 28rpx;
  color: #4A4A4A;
  line-height: 36rpx;
  margin-top: 26rpx;
}
.product_num{
  line-height: 120rpx;
}
.product .imgBox{
  width: 102rpx;
  height: 102rpx;
  overflow: hidden;
  margin-top: 30rpx;
}
.product_img{
  width: 100%;
  height: 100%;
}
 
.btn_after{
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  border-top: 1px solid #000;
  border-right: 1px solid #000;
  transform: rotate(45deg);
  margin-top: 60rpx;

}
.detail{
  font-family: PingFangHK-Regular;
  font-size: 28rpx;
  color: #9B9B9B;
  letter-spacing: 0;
  line-height: 29px;
  margin-left: 28rpx;
  padding: 16rpx 0;
}
.detail_info{
  display: inline-block;
  margin-left: 20rpx;
  color: rgb(107, 107, 107);
}
