.btn{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  text-align: center;
  line-height: 55px;
  color: #ffffff;
}
.btn_left{
  width: 33%;
  height: 110rpx;
  font-size: 34rpx;
  color: #4A4A4A;
  background: #ffffff;

}
.btn_center{
  width: 33%;
  height: 110rpx;
  background: #C6AAE1;
}
.btn_ico{
  width: 30rpx;
  height: 30rpx;
}
