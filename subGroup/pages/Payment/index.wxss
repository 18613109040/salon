  display: flex;
  justify-content: center;
  align-items: center;
  padding: 28rpx 0;
}
.phone-one{
  color: #4A4A4A;
  font-size: 28rpx;
  padding-left: 30rpx;
}
.phone-two .input{
  /*border:1px solid #ddd;*/
