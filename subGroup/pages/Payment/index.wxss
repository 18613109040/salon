}
.ji-left{
  color: #4A4A4A;
  font-size: 28rpx;
  float: left;
  padding-left: 32rpx;
}
.ji-right{
  float: right;
  color: #f8b850;
  font-size: 28rpx;
  padding-right: 28rpx;
}

/* 数量开始 */
.number{
  margin: 0 24rpx 0 26rpx;
  border-bottom: 2rpx solid #F3F3F3;
   padding: 22rpx 0; 
