  padding:0 10rpx;
}
.phone-two{
  flex: 1;
  color: #9B9B9B;
  font-size: 28rpx;
  padding-left: 16rpx;
  width: 240rpx;
}
.phone-three{
  color: #4A90E2;
  font-size: 24rpx;
  /*padding-left: 286rpx;*/
}

/* 小计开始 */
.ji{
  margin: 0 24rpx 0 26rpx;
  border-bottom: 2rpx solid #F3F3F3;
