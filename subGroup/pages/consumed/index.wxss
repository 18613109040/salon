/* subGroup/pages/consumed/index.wxss */
.LookCollage{
  background: #ffffff;
}
.LookCollage-top{
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-between;
}
.LookCollage-top .top_left{
  width: 30%;
  height: 50px;
  background: #DDDDDD;
  font-family: PingFangHK-Regular;
  font-size: 16px;
  color: #5F57B4;
  letter-spacing: 0;
  line-height: 50px;
  text-align: center;
}
.top_time{
  color: rgb(126, 174, 231);
}
.LookCollage-top .top_right{
  width: 70%;
  height: 50px;
  background: #F3F3F3;
  font-family: PingFangHK-Regular;
  font-size: 14px;
  color: #9B9B9B;
  letter-spacing: 0;
  line-height: 50px;
  text-align: center;
}
.LookCollage-title{
  width: 100%;
  height: 85px;
  display: flex;
  justify-content: space-around;
  padding: 18px 0;
  box-sizing: border-box;
  border-bottom: 1px solid #EAEAEA;
}
.title_left{
  font-family: PingFangHK-Regular;
  font-size: 18px;
  color: #000000;
  letter-spacing: 0;
  line-height: 25px;
}
.title_left .distances{
  font-size: 14px;
  color: rgb(126, 174, 231)
}
.title_left .address{
  font-size: 14px;
  color: rgb(99, 99, 99);
}
.title_right{
  width: 60px;
}
.title_img{
  display: block;
  width: 27px;
  height: 27px;
  margin: 0 auto;
}
.title_right .Navigate {
  font-size: 11px;
  color: #5F57B4;
  letter-spacing: 0;
  text-align: center;
}
.product{
  width: 100%;
  height: 81px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #EAEAEA;
  padding: 0 14px;
  box-sizing: border-box;
}
.product_center{
  width:70%;
  display: flex;
  justify-content: space-between;
  font-family: PingFangHK-Regular;
  font-size: 14px;
  color: #4A4A4A;
  line-height: 18px;
  margin-top: 13px;
}
.product_info{
  font-size: 14px;
  color: #9B9B9B;
  letter-spacing: 0;
  line-height: 20px;
}
.product_num{
  line-height: 60px;
}
.product .imgBox{
  width: 51px;
  height: 51px;
  overflow: hidden;
  margin-top: 15px;
}
.product_img{
  width: 100%;
  height: 100%;
}
 
.btn_after{
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  border-top: 1px solid #000;
  border-right: 1px solid #000;
  transform: rotate(45deg);
  margin-top: 34px;

}
.detail{
  font-family: PingFangHK-Regular;
  font-size: 14px;
  color: #9B9B9B;
  letter-spacing: 0;
  line-height: 29px;
  margin-left: 14px;
  padding: 8px 0;
}
.detail_info{
  display: inline-block;
  margin-left: 20rpx;
  color: rgb(107, 107, 107);
}
.specialCodeBox{
  border-top: 10px solid #EAEAEA;
  position: relative;
  padding-bottom: 15px;
}
.specialCode{
  font-size: 14px;
  color: #9B9B9B;
  letter-spacing: 0;
  line-height: 30px;
  margin-left: 24rpx;
  position: absolute;

}
.ORcode{
  display: block;
  width: 160px;
  height: 160px;
  margin:15px auto 0;
}
.barCode{
  font-size: 24px;
  color: #D0021B;
  letter-spacing: 0;
  text-align: center;
  font-weight: bold;
}
.btn{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  text-align: center;
  line-height: 55px;
  color: #ffffff;
}
.btn_left{
  width: 50%;
  height: 55px;
  background: #C6AAE1;
}
.btn_ico{
  width: 15px;
  height: 15px;
}
.btn_right{
  width: 50%;
  height: 55px;
  background: #877FD4;
}